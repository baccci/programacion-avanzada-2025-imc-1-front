{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off",
        "noArrayIndexKey": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "performance": {
        "noImgElement": "off"
      },
      "style": {
        "useConst": {
          "fix": "unsafe",
          "level": "warn",
          "options": {}
        },
        "useSelfClosingElements": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        }
      },
      "correctness": {
        "noUnusedImports": {
          "fix": "unsafe",
          "level": "warn",
          "options": {}
        },
        "noUnusedVariables": {
          "fix": "unsafe",
          "level": "warn",
          "options": {}
        },
        "noUnusedFunctionParameters": {
          "fix": "unsafe",
          "level": "warn",
          "options": {}
        },
        "noUnusedPrivateClassMembers": {
          "fix": "unsafe",
          "level": "warn",
          "options": {}
        }
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "none"
    },
    "linter": {
      "enabled": true
    }
  }
}